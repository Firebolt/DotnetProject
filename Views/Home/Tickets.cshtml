@model IEnumerable<FinalProject.Models.Ticket>
@{
    ViewData["Title"] = "Your tickets";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    @if (Model != null && Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SeatNumber)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => ticket.FID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ticket.BookedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ticket.SeatNumber)
                        </td>
                        <td>
                            @Html.ActionLink("Cancel", "CancelTicket", new { uid = ticket.UID, fid = ticket.FID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>