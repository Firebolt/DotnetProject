@model IEnumerable<FinalProject.Models.Flight>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewData["Title"]</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </head>
    <body>

    <div class="sidebar">
        <h2>Filter Flights</h2>
        <form id="filterForm">
            <div class="form-group">
                <label for="takeoffLocation">Takeoff Location:</label>
                @{
                    var takeoffLocations = Model.Select(f => f.TakeOffLocation).Distinct().ToList();
                    takeoffLocations.Insert(0, "All");
                }
                @Html.DropDownList("takeoffLocation", new SelectList(takeoffLocations))
            </div>
            <div class="form-group">
                <label for="destination">Destination:</label>
                @{
                    var destinations = Model.Select(f => f.Destination).Distinct().ToList();
                    destinations.Insert(0, "All");
                }
                @Html.DropDownList("destination", new SelectList(destinations))
            </div>
            <div class="form-group">
                <label for="maxTicketCost">Max Ticket Cost:</label>
                <input type="range" id="maxTicketCostSlider" min="0" max="@Model.Max(f => f.TicketCost)" value="@Model.Max(f => f.TicketCost)">
                <span id="maxTicketCostValue">@Model.Max(f => f.TicketCost)</span>
                <input type="hidden" id="maxTicketCost" name="maxTicketCost" value="@Model.Max(f => f.TicketCost)">
            </div>
            <button type="button" onclick="filterFlights()">Apply Filters</button>
        </form>
    </div>



    <div id="flightTable">
        @Html.Partial("_FlightList")
    </div>

    @section scripts {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                setupMaxTicketCostSlider();
                filterFlights();
            });

            function setupMaxTicketCostSlider() {
                var maxTicketCostSlider = $("#maxTicketCostSlider")[0]; // Use [0] to get the DOM element
                var maxTicketCostValue = $("#maxTicketCostValue");

                maxTicketCostSlider.min = 0;
                maxTicketCostSlider.max = @Model.Max(f => f.TicketCost);
                maxTicketCostSlider.value = @Model.Max(f => f.TicketCost);

                maxTicketCostSlider.addEventListener("input", function () {
                    var value = maxTicketCostSlider.value;
                    maxTicketCostValue.text(value);
                    $("#maxTicketCost").val(value);
                });
            }

            function filterFlights() {
                var takeoffLocation = $("#takeoffLocation").val();
                var destination = $("#destination").val();
                var maxTicketCost = $("#maxTicketCost").val();
                if (takeoffLocation === "All") {
                    takeoffLocation = "";
                }
                if (destination === "All") {
                    destination = "";
                }

                $.ajax({
                    url: '@Url.Action("FilterFlights", "Home")',
                    type: 'GET',
                    data: { takeoffLocation: takeoffLocation, destination: destination, maxTicketCost: maxTicketCost },
                    success: function (data) {
                        $("#flightTable").html(data);
                    }
                });
            }
        </script>
    }
    </body>
</html>