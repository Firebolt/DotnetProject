@model IEnumerable<FinalProject.Models.Query>
    @{
    ViewData["Title"] = "Home Page";
    }

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin-top: 20px;
        }

        a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

            a:hover {
                color: #0056b3;
            }

        table {
            width: 100%;
           
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .no-queries {
            color: #777;
            margin-top: 20px;
        }
    </style>

    <a href="@Url.Action("Query")">Ask a New Question</a>

    @if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Question</th>
                <th>Answer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var query in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => query.Question)</td>
                <td>@Html.DisplayFor(modelItem => query.Answer)</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="no-queries">You have asked no queries.</p>
}
