@model FinalProject.Models.Query
@using (Html.BeginForm("AnswerQuery", "Admin", FormMethod.Post, new { @class = "answer-form" }))
{
@Html.AntiForgeryToken()
<div class="question-container">
    @Html.DisplayFor(model => model.Question)
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Answer)
    @Html.TextAreaFor(model => model.Answer, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
</div>
<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary" />
</div>
}
<div class="back-link">
    @Html.ActionLink("Back to list", "QueryList")
</div>

<style>
    .answer-form {
        margin: 20px;
        margin-top: 100px; 
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        max-width: 600px;
    }

    .question-container {
        margin-bottom: 15px;
        font-weight: bold;
        font-size: 18px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: #4caf50;
        color: #fff;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #45a049;
        }

    .back-link {
        margin-top: 20px;
        margin-left:20px;
    }
</style>
