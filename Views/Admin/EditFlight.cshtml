@model FinalProject.Models.FlightRequest

@using (Html.BeginForm("Editflight", "Admin", FormMethod.Post, new { @class = "flight-request-form" }))
{
@Html.AntiForgeryToken()

<div class="form-row">
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.NumofRows)
            @Html.TextAreaFor(model => model.NumofRows, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NumofRows, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TicketCost)
            @Html.TextAreaFor(model => model.TicketCost, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TicketCost, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeparDateandTimeOffset)
            @Html.TextAreaFor(model => model.DeparDateandTimeOffset, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DeparDateandTimeOffset, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ArrDateandTimeOffset)
            @Html.TextAreaFor(model => model.ArrDateandTimeOffset, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ArrDateandTimeOffset, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            @Html.LabelFor(model => model.Destination)
            @Html.TextAreaFor(model => model.Destination, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TakeOffLocation)
            @Html.TextAreaFor(model => model.TakeOffLocation, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TakeOffLocation, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AirportLoc)
            @Html.TextAreaFor(model => model.AirportLoc, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AirportLoc, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary" />
</div>
}

