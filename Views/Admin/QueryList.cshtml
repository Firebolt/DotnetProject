@model IEnumerable<FinalProject.Models.Query>
@{
    ViewData["Title"] = "Home Page";
}

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
    </tr>
    @foreach (var item in ViewBag.Answered as IEnumerable<FinalProject.Models.Query>)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                @Html.ActionLink("Answer", "AnswerQuery", new {uid = item.UID, qid = item.QID})
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteQuery", new {uid = item.UID, qid = item.QID})
            </td>
        </tr>
    }
</table>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
    </tr>
    @foreach (var item in ViewBag.Unanswered as IEnumerable<FinalProject.Models.Query>)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer)
            </td>
            <td>
                @Html.ActionLink("Update Answer", "AnswerQuery", new {uid = item.UID, qid = item.QID})
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteQuery", new {uid = item.UID, qid = item.QID})
            </td>
        </tr>
    }
</table>